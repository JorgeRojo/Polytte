<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
  </body>

  <script src="/socket.io/socket.io.js"></script>
  <script>

    var socket = io('http://192.168.1.85:3000/');
    (() => {

      socket.on('face_ok', function (data) { 
        console.warn('>>>>------------> face_ok ', data);   
      });


      const faces = ['X','A','B','C','D','E','F','G','H'];
      let i = 0;
      setInterval(() => {
        socket.emit('face', { id: 'XXXX', face: faces[i] } );
        // socket.emit('battery', i * 10);
        i++;
        if(i >= faces.length) {
          i=0;
        }
      }, 1000);


    })();
  </script>
</html>
